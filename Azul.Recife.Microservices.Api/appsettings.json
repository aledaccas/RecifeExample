{
  "apiSettings": {
    "customMiddleware": {
      "exceptionHandler": true,
      "requestTracking": false,
      "tokenValidation": false,
      "cultureHandler": true,
      "deviceHandler": true
    },
    "defaultCultureCode": "pt-br",
    "showDetailedException": true
  },
  "swaggerDoc": {
    "name": "v1",
    "info": {
      "title": "Recife.Api",
      "version": "v1",
      "description": "Barramento DC Recife"
    }
  },
  "swaggerEndpoint": {
    "url": "/swagger/v1/swagger.json",
    "name": "Recife.Api"
  },
  "resources": {
    "id": "Azul.Recife.Api",
    "cacheExpirationMinutes": 15
  },
  "cache": {
    "redis": {
      "serverConfiguration": "localhost"
    }
  },
  "serviceClients": [
    {
      "id": "PostService",
      "address": "https://jsonplaceholder.typicode.com/",
      "timeout": 5,
      "resilience": {
        "circuitbreaker": {
          "enabled": true,
          "failureThreshold": 0.9,
          "samplingDuration": 10,
          "minimumThrouput": 3,
          "durationOfBreak": 10
        },
        "retry": {
          "enabled": true,
          "attempts": 3,
          "waitDuration": 200
        }
      }
    }
  ]
}
